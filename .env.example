#
# Environment configuration template for Appointment360 backend.
# Copy this file to `.env` and replace placeholder values before running in production.
#

# ------------------------------------------------------------------------------
# Deployment environment
# ------------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=False
PROJECT_NAME=Appointment360 API
VERSION=0.1.0
DESCRIPTION=Async FastAPI backend for Appointment360 data APIs

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
# Generate a strong random value, e.g. `openssl rand -hex 64`
SECRET_KEY=replace-with-hex-secret
# Application specific signing/authorization key
CONTACTS_WRITE_KEY=replace-with-write-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ------------------------------------------------------------------------------
# FastAPI configuration
# ------------------------------------------------------------------------------
DOCS_URL=null
REDOC_URL=null
ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com
TRUSTED_HOSTS=app.example.com,.example.com

# ------------------------------------------------------------------------------
# Gunicorn / Uvicorn workers
# ------------------------------------------------------------------------------
GUNICORN_BIND=unix:/run/appointment360.sock
GUNICORN_WORKERS=
GUNICORN_TIMEOUT=30
GUNICORN_GRACEFUL_TIMEOUT=30
FORWARDED_ALLOW_IPS=127.0.0.1

# ------------------------------------------------------------------------------
# Database (PostgreSQL / Asyncpg)
# ------------------------------------------------------------------------------
POSTGRES_USER=appointment360
POSTGRES_PASS=change-me
POSTGRES_HOST=postgres.internal
POSTGRES_PORT=5432
POSTGRES_DB=appointment360
DATABASE_ECHO=False

# ------------------------------------------------------------------------------
# Redis / Celery
# ------------------------------------------------------------------------------
REDIS_URL=redis://127.0.0.1:6379/0
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# ------------------------------------------------------------------------------
# Files and uploads
# ------------------------------------------------------------------------------
UPLOAD_DIR=./uploads

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
